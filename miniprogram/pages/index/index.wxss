/* miniprogram/pages/index/index.wxss */
.container{
  /* border: 1px solid #000; */
  width: 100%;
  height: 100%;
  margin-top: 5px;
  padding:0 10px;
}
.container:first-child{
  margin-top: 20px;
}
.top-box{
  width: 100%;
  height: 60px;
  position: relative; 
}
.avatar{
  display: inline-block;
  position: relative;
  width: 40px;
  height: 40px;
  margin-left: 5px;
}
.image{
  /* display: inline-block; */
  position: absolute;
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.name{
  position: relative;
  top: -15px;
  left: 20px;
  color: Black;
}
.logo{
  position: relative;
  display: inline-block;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #000;
  left: 30px;
  top: 4px;
  /* justify-content: center;
  align-items: center; */
}
.xing{
  position: absolute;
  margin-top: 25px;
  margin-left: 25px;
  transform: translate(-50%, -50%);
  font-size: 32px;
  font-weight: bold;
}
.icon-close{
  /* display: inline-block; */
  position: relative;
  width: 12px;
  height: 12px;
  /* right: 0; */
  float: right;
  top: 25px;
}
.icon-close .close{
  position: absolute;
  width: 12px;
  height: 12px;
}
.contentBox{
  position: relative;
  width: 100%;
  height: 320px;
  border: 1px solid #cfcfcf;
  margin-top: 5px;
  border-radius: 30px;
}
.title{
  border: 1px solid #cfcfcf;
  margin-top: 10px;
  margin-left: 10%;
  width: 180px;
}
.content{
  position: relative;
  width: 80%;
  height: 75%;
  margin: 0 auto;
  margin-top: 5px;
  margin-bottom: 5px;
  border: 1px solid #cfcfcf;
}
.content-image{
  width: 85%;
  height: 85%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.text{
  padding-top: 10px;
  padding-left: 5px;
}
.text .sub-title{
  color: #1a1a1a;
}
.buttom{
  /* border: 1px solid #000; */
  position: relative;
  width: 80%;
  height: 20px;
  margin: 0 auto;
}
.buttom .share{
  width: 20px;
  height: 20px;
  display: inline-block;
  position: relative;
}
.share image{
  position: relative;
  width: 100%;
  height: 100%;
}
.buttom .share-text{
  display: inline-block;
  font-size: 10px;
  color: #7f7f7f;
  position: relative;
  top: -6px;
  left: 5px;
}
.message{
  display: inline-block;
  width: 20px;
  height: 20px;
  position: absolute;
  margin-left: 20px;
}
.message image{
  position: relative;
  width: 100%;
  height: 100%;
}
.buttom .command{
  display: inline-block;
  font-size: 10px;
  color: #7f7f7f;
  position: relative;
  left: 46px;
  top: -6px;
}
