page{
  height: 100%;
  width: 100%;
}
.tab-wrapper{
  width: 100%;
  background: #F6F6F6;
  border-top: 1rpx solid #F6F6F6;
  border-bottom: 1rpx solid #F6F6F6;
  display: flex;
  top: 100rpx;
}
.tab-item{
  display: inline-block;
  flex: 1;
  font-size: 32rpx;
  text-align: center;
  background: #fff;
  color: #999;
  padding: 12rpx 0;
}
.tab-item-active{
  color: #323233;
  border-bottom: 2px solid #000;
}

.tab-content{
  display: block;
  /* display: flex; */
  width: 100%;
  position: relative;
  top: 50rpx;
  padding-left: 1%;
}
.tab-content .box{
  display: inline-block;
  /* flex: 1; */
  width: 46%;
  padding: 0;
  margin-left: 2%;
  margin-right: 2%;
  margin-top: 1%;
}
.tab-content .box:first{
  margin-left: 0;
}
.box image{
  height: 140px;
  width: 140px;
}


.show{
  display: block;
}
.hide{
  display: none;
}